    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "php": ">=7.2",
        "codeigniter4/framework": "^4",
        "casbin/casbin": "^2.0",
        "casbin/psr3-bridge": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Casbin\\CodeIgniter\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Casbin\\CodeIgniter\\Tests\\": "tests/"
        }
    }
}