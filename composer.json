{
    "name": "casbin/codeigniter-permission",
    "description": "Associate users with roles and permissions, use Casbin in CodeIgniter4 Web Framework.",
    "authors": [
        {
            "name": "TechLee",
            "email": "techlee@qq.com"
        }
    ],
    "license": "Apache-2.0",
    "keywords": [
        "casbin",
        "rbac",
        "acl",
        "authorization",
        "permission",
        "abac",
        "access control",
        "codeigniter"
